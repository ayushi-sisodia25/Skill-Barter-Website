<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkillSwap Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <%- include('./utilities/stylesheet_inclusion'); %>
</head>
<body>

    <%- include('./utilities/navbar_dashboard'); %>

    <main class="dashboard-main-content">
        <div class="container py-4">
            <div class="row">

                <section class="col-lg-8 mb-4">
                    <h2 class="section-title">Your Feed</h2>
                    <div class="feed-cards">
                        <% if (typeof rowValues !== 'undefined' && rowValues.length > 0) { %>
                            <% rowValues.forEach(function(row){ %>
                                <div class="skill-card">
                                    <div class="card-header">
                                        <h3 class="card-user-name"><%= row.name %></h3>
                                    </div>
                                    <div class="card-body">
                                        <h4 class="card-skill-title"><%= row.skill %></h4>
                                        <p class="card-description"><%= row.user_desc %></p>
                                        <a href="/users/<%= user.id %>/chat/<%= row.id %>" class="btn btn-chat">Chat Now</a>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="no-content-message">
                                <p>No skills found in your feed yet. Start sharing!</p>
                            </div>
                        <% } %>
                    </div>
                </section>

                <aside class="col-lg-4">
                    <h2 class="section-title">Your Details & Skills</h2>
                    <div class="user-details-form">
                        <% if (messages.success_msg) { %>
                            <div class="alert alert-success" role="alert">
                                <%= messages.success_msg %>
                            </div>
                        <% } %>
                        <% if (messages.error) { %>
                            <div class="alert alert-danger" role="alert">
                                <%= messages.error %>
                            </div>
                        <% } %>

                            <form action="/users/<%= user.id %>/dashboard/skill" method="POST">
                                <div class="form-group">
                                <label for="skill">What skill do you offer?</label>
                <textarea id="skill" name="skill" class="form-control" placeholder="e.g., Web Development, Graphic Design, Piano Lessons"><%= typeof currentUserSkill !== 'undefined' && currentUserSkill !== null ? currentUserSkill : '' %></textarea>
                </div>
            <div class="form-group">
                <label for="user_desc">Tell something about yourself:</label>
                <textarea id="user_desc" name="user_desc" class="form-control" placeholder="I love to code and dance, eager to learn new things and share my knowledge."><%= typeof user.user_desc !== 'undefined' && user.user_desc !== null ? user.user_desc : '' %></textarea>
                </div>
            <button type="submit" class="btn btn-primary btn-submit-skill">Update Profile & Skill</button>
        </form>
                    </div>
                </aside>

            </div>
        </div>
    </main>

    <%- include('./utilities/footer'); %>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <%- include('./utilities/scripts_inclusion'); %>
</body>
</html>